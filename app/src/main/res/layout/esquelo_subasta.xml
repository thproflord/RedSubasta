<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/subasta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp">

            <ImageView
                android:id="@+id/imagen"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:scaleType="fitXY"
                app:srcCompat="@mipmap/prueba" />

            <TextView
                android:id="@+id/nombre_subasta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/imagen"
                android:text="Nombre del Objeto"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/precio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nombre_subasta"
                android:layout_marginTop="18dp"
                android:layout_toEndOf="@+id/imagen"
                android:text="100"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/estado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/precio"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/nombre_subasta"
                android:layout_toEndOf="@+id/nombre_subasta"
                android:lineSpacingExtra="8sp"
                android:text="En \n Curso"
                android:textAlignment="center"
                android:textSize="18sp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>